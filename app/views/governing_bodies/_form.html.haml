= nested_form_for @governing_body do |f|
  - if @governing_body.errors.any?
    #error_explanation
      %h2= "#{pluralize(@governing_body.errors.count, "error")} prohibited this governing_body from being saved:"
      %ul
        - @governing_body.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :location
    = f.text_field :location
  .actions
    = f.submit 'Save'
