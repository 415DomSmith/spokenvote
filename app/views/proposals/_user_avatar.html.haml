.user-avatar
- if !user.authentications.empty?
  = image_tag "http://graph.facebook.com/#{user.authentications.first.uid}/picture?width=30&height=30"
-else
  - default_url = "#{root_url}images/guest.png"
  - gravatar_id = Digest::MD5.hexdigest(user.email.downcase)
  = image_tag "http://gravatar.com/avatar/#{gravatar_id}.png?s=30d=#{CGI.escape(default_url)}"

.supported_date
  = link_to user.username, proposals_path(user_id: user)
  %br
  = created_at.to_s(:month_day_year)
