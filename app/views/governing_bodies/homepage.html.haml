- if current_user && user_signed_in?
  %h1.page_title Your SpokenVote!

  .row
    .span8
      %h2
        = link_to 'Add a Position', new_position_path, :class => 'btn pull-right'
        Your Active Positions 
      %table.listing
        %tr
          %th Statement
          %th Votes

        - @positions.each do |pos|
          %tr
            %td= link_to pos.statement, edit_position_path(pos)
            %td= pos.votes_count

    #sidebar.span4{:style => 'padding: 20px;'}
      %h2 Logged in Sidebar
      %div some content

- else
  %h1.page_title Welcome to SpokenVote!

  .row
    .span8
      %h2 Active Positions 
      %table.listing
        %tr
          %th Statement
          %th Votes

        - @positions.each do |pos|
          %tr
            %td= link_to pos.statement, edit_position_path(pos)
            %td= pos.votes_count

      %h2 Active Governing Bodies
      %table.listing
        %tr
          %th Name
          %th Description

        - @governing_bodies.each do |governing_body|
          %tr
            %td= link_to governing_body.name, edit_governing_body_path(governing_body)
            %td= governing_body.description

    #sidebar.span4
      .login_box
        .login_form
          %h3
            Sign in through:
            = link_to image_tag('icons/providers/images/facebook_128.png'), user_omniauth_authorize_path(:facebook)

          %h3 Sign in with SpokenVote
          = form_tag 'users/login' do
            %div
              = label_tag :email
              = email_field_tag :email
            %div
              = label_tag :password
              = password_field_tag :password
            / - if devise_mapping.rememberable?
            /   = check_box_tag :remember_me
            /   = label_tag :remember_me
            %div= submit_tag "Sign in", :class => 'btn btn-primary'

      .login_box
        .login_form
          %h3
            Sign up through:
            = link_to image_tag('icons/providers/images/facebook_128.png'), user_omniauth_authorize_path(:facebook)

          %h3 Sign up
          %br
          = form_tag '/users' do
            %div
              = label_tag :email
              = email_field_tag :email
            %div
              = label_tag :password
              = password_field_tag :password
            %div
              = label_tag :password_confirmation
              = password_field_tag :password_confirmation
            %div= submit_tag "Sign up", :class => 'btn btn-primary'
