= form_for @vote do |f|
  - if @vote.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vote.errors.count, "error")} prohibited this vote from being saved:"
      %ul
        - @vote.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :user_id, :value => current_user.id
  
  .field
    = f.label :position_id
    = f.select :position_id, Position.all.map{|p| [p.statement, p.id] }
  .field
    = f.label :comment
    = f.text_area :comment
    
  .actions
    = f.submit 'Save'
