%ul( ng-controller='SidebarCtrl' role='menu' )
  %li( ng-href='/proposals?filter=my' ng-show='currentUser.username' )
    %a.action-links
      .fa.fa-check-square-o
      %span My proposals

  %li
    %accordion{"close-others" => "oneAtATime"}
      -#%accordion-group{heading: "Static Header, initially expanded", "is-open" => "true"}
        This content is straight in the template.
      -#%accordion-group{heading: "", "ng-repeat" => "group in groups"}

      -#%accordion-group{heading: "Dynamic Body Content"}
        %p The body of the accordion group grows to fit the contents
        %button.btn.btn-default.btn-sm{"ng-click" => "addItem()"} Add Item
        %div{"ng-repeat" => "item in items"}
      %accordion-group{"is-open" => "isopen"}
        %accordion-heading
          .fa.fa-filter
          %span Filter
          -#%i.pull-right.glyphicon{"ng-class" => "{'glyphicon-chevron-down': isopen, 'glyphicon-chevron-right': !isopen}"}
        One
        Two
        Three

  %li( href='#' ng-click='userSettings()'  ng-show='currentUser.username' )
    %a
      .fa.fa-wrench
      -#.glyphicon.glyphicon-cog
      %span Settings
  %li( href='#' ng-click='signinAuth()' ng-show='!currentUser.username' )
    %a.action-links
      .fa.fa-sign-in
      %span Sign in
  %li( href='#' ng-click='signOut()' ng-show='currentUser.username' )
    %a.action-links
      .fa.fa-sign-out
      %span Sign out
  %li( ng-show='currentUser["is_admin?"]' )
    %a.action-links( href='/admin' target='_blank' )

      %span Admin
  %li
    .hr
  %li
    %a.category-links( href='/about' )
      .fa.fa-pagelines
      %span About Spokenvote
  %li
    .hr
  %li
    %a.category-links( href='http://railsforcharity.github.io/spokenvote/' )
      .fa.fa-github
      %span Developers
  %li.category-links
    .hr
  %li
    %a.category-links( href='/terms-of-use' )
      .fa.fa-bell-o
      %span Terms of use

